<script>
  $(document).ready(function () {
    $('#editServiceForm').submit(function (event) {
        event.preventDefault();
        const formData = new FormData(this);
        $.ajax({
            type: 'POST',
            url: '/admin/editservice/<%=service.id%>',
            data: formData,
            contentType: false, 
            processData: false, 
            success: function (response) {
                $('#successMessage').css('display', 'block');
                $('#addServiceForm')[0].reset();
                $('#imagePreview').attr('src', ''); // Add this line
                setTimeout(function () {
                    $('#successMessage')?.fadeOut();
                }, 3000);
            },
            error: function (error) {
                console.error(error);
            },
        });
    });
});

</script>

<script>
    function previewImage(input){
        const imagePreview = document.getElementById('imagePreview');
        if(input.files && input.files[0]){
            const reader = new FileReader();
            reader.onload = function(e){
                imagePreview.src = e.target.result;
                imagePreview.style.display = 'block';
            };
            reader.readAsDataURL(input.files[0]);
           
        }else{
            imagePreview.style.display = 'none';
        }
    }
</script>

<script>
    
    var quill = new Quill('#editor', {
       theme: 'snow',
       readOnly : false
    });
    var serviceFeatures = JSON.parse(document.getElementById('serviceFeatures').value)
    quill.setContents([]);
    serviceFeatures.ops.forEach(function(op){
        if(op.insert.trim()==='\n'){
            quill.insertText(quill.getLength(),'\n','list','bullet');
        }else{
            quill.insertText(quill.getLength(),op.insert);
        }
    });
    quill.on('text-change',function(){
        const delta = quill.getContents();
        const content = JSON.stringify(delta);
        document.getElementById('serviceFeatures').value = content;
    })
